<UserControl x:Class="FlightSimulator.Views.Controls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">
    <Grid>
            <TextBlock x:Name="errorBox" HorizontalAlignment="Right" TextWrapping="Wrap" Text="{Binding VM_Error}" VerticalAlignment="Top" Height="25" Width="726" Grid.ColumnSpan="2" FontSize ="14" Margin="0,4,9.667,0"/>
            <Button x:Name="connect" Content="Connect" HorizontalAlignment="Left" Height="23" Margin="10,4,0,0" VerticalAlignment="Top" Width="61" Click="connect_Click" IsEnabled="{Binding VM_CanConnect}" BorderBrush="#FF9FF781" Background="#FF41FF00"/>
            <Button x:Name="disconnect" Content="Disonnect" HorizontalAlignment="Left" Height="23" Margin="80,4,0,0" VerticalAlignment="Top" Width="61" Click="disconnect_Click" BorderBrush="#FFFF4306" Background="#FFE90505"/> 
    </Grid>
</UserControl>
