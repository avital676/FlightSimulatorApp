<UserControl x:Class="FlightSimulator.Views.Navigates"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views"
             mc:Ignorable="d" 
             Background="DarkGray"
             d:DesignHeight="270" d:DesignWidth="300">
    <Grid>
        <Viewbox HorizontalAlignment="Center" Height="170" Margin="0,15,0,0" VerticalAlignment="Top" Width="170">
            <local:Joystick x:Name="joystickN" Height="330" Width="330"/>
        </Viewbox>
        <Slider HorizontalAlignment="Left" Margin="15,218,0,0" VerticalAlignment="Top" Width="130" Height="21" ValueChanged="Slider_ValueChanged"/>
        <Slider HorizontalAlignment="Right" Margin="0,218,10,0" VerticalAlignment="Top" Height="21" Width="130"/>
    </Grid>
</UserControl>
