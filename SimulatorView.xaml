<Page x:Class="FlightSimulator.SimulatorView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlightSimulator"
       xmlns:Views="clr-namespace:FlightSimulator.Views" 
      mc:Ignorable="d" 
        xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
      d:DesignHeight="520" d:DesignWidth="920"
      Title="SimulatorView">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" ClipToBounds="True" >
    <Grid>
        <Views:AllView x:Name="allView" HorizontalAlignment="Stretch" Height="Auto" Margin="0,0,0,0" VerticalAlignment="Stretch" Width="Auto"/>
        <Button x:Name="connect" Content="Connect" HorizontalAlignment="Left" Height="23" Margin="10,5,0,0" VerticalAlignment="Top" Width="61" Click="connect_Click" IsEnabled="{Binding VM_CanConnect}"/>
        <Button x:Name="disconnect" Content="Disonnect" HorizontalAlignment="Left" Height="23" Margin="80,5,0,0" VerticalAlignment="Top" Width="61" Click="disconnect_Click"/>
    </Grid>
    </ScrollViewer>
</Page>
